<% layout('layouts/boilerplate')%>

  <div class="container d-flex justify-content-center align-items-center" style="height: 50vh; margin-bottom: 20px;">
    <div id="carouselExampleDark" class="carousel carousel-dark slide w-100">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
          <img crossorigin="anonymous"
            src="https://res.cloudinary.com/dvbpp1fyg/image/upload/v1727978901/mo8m13rcuron2jqn6ahm.jpg"
            class="d-block w-100" alt="..." style="height: 40vh; object-fit: cover;">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="text-black">Innovative Project Solutions</h5>
            <p class="text-black">Explore cutting-edge projects developed by our talented students.</p>
          </div>
        </div>
        <div class="carousel-item" data-bs-interval="2000">
          <img crossorigin="anonymous"
            src="https://res.cloudinary.com/dvbpp1fyg/image/upload/v1727978901/fkzwncqw6fwlwerutr3k.jpg"
            class="d-block w-100" alt="..." style="height: 40vh; object-fit: cover;">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="text-black">Showcase Your Work</h5>
            <p class="text-black">Share your projects and gain recognition for your hard work.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img crossorigin="anonymous"
            src="https://res.cloudinary.com/dvbpp1fyg/image/upload/v1727978902/n61m6cgas7chfxgx8pvp.jpg"
            class="d-block w-100" alt="..." style="height: 40vh; object-fit: cover;">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="text-black">Collaborative Development</h5>
            <p class="text-black">Our platform fosters collaboration and innovation among students.</p>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <div class="container mt-4 mb-5">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% for(let project of projects) { %>
        <div class="col">
          <a href="/projects/<%= project._id %>" style="text-decoration: none;">
            <div class="card">

              <img crossorigin="anonymous" src="<%= project.image.url %>" class="card-img-top" alt="Project image"
                style="height: 300px; object-fit: cover;">

              <div class="card-body">
                <h5 class="card-title">
                  <%= project.title %>
                </h5>
                <p class="card-text">
                  <%= project.description %>
                </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
    </div>
  </div>