<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Project</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/projects/<%=project._id%>?_method=PUT" novalidate class="needs-validation" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="project[title]"
                    value="<%=project.title %>" required>
            </div>
            <div class="mb-3">
                <img  src="<%= project.image.thumbnail %> " class="img-thumbnail" alt="">
            </div>
            
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input class="form-control" type="file" id="image" name="image">
              </div>
              
          
          
            <div class="mb-3">
                <label class="form-label" for="files">File Url</label>
                <input class="form-control" type="text" id="files" name="project[files]" value="<%= project.files %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="project[description]" required><%= project.description%></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Technologies</label><br>
                <div id="technologies-container">
                    <!-- This will be populated with JavaScript -->
                </div>
                <input type="text" class="form-control mt-2" id="newTechnology" placeholder="Enter a new technology" required>
                <button type="button" class="btn btn-primary mt-2" onclick="addTechnology()">Add Technology</button>
            </div>
            

            <div class="mb-3">
                <button class="btn btn-info">Update Project</button>
            </div>
        </form>
        <a class="nav-link" href="/projects/<%= project._id%>">Back To Project</a>

    </div>
</div>

<script  src="/javascripts/addTechnology.js"></script>